@model List<GithubExplorer.Models.Repository>
@{
    ViewBag.Title = "Repositories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container search-bar mt-15">
    <div class="row text-center">
        <div class="col-12">
            @using (Html.BeginForm())
            {
                <input name="query" type="text" class="form-control d-inline" placeholder="Search Repository...">
                <button class="btn btn-primary d-inline" type="submit">Search</button>
            }
        </div>
    </div>
</div>


@if (Model.Count == 0)
{
    <div class="container mt-15">
        <div class="row text-center">
            <div class="col-10 m-auto">
                <i>There are no repositories to display</i>
            </div>
        </div>
    </div>
}
<div class="row text-center">
    @foreach (GithubExplorer.Models.Repository item in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card mt-15">
                <img src="@item.owner.avatar_url" class="card-img-top" style="width: 250px;">
                <p class="card-text d-inline">
                    @item.name <br>
                    by: @item.owner.login
                </p>
                <button class="btn btn-primary form-control mt-5">Add to Favorites</button>
            </div>
        </div>
    }
</div>
